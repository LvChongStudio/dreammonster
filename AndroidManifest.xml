<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cold.dreammonster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:name="com.cold.dreammonster.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cold.dreammonster.activity.LoadingActivity"
            android:label="@string/app_name"
           android:theme="@style/NoActionBar"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.cold.dreammonster.activity.GuideActivity"
            android:theme="@style/NoActionBar"></activity>
         <activity 
            android:name="com.cold.dreammonster.activity.MainActivity"
            android:theme="@style/NoActionBar"></activity>
    </application>

</manifest>
